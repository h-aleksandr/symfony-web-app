{% extends 'base.html.twig' %}

{% block title %}{{ 'security.title' | trans }}!{% endblock %}

{% block body %}
    <div class="form-login">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ ' secerity.you.are.logged' | trans}} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'security.you.are.logged.logout' | trans }}</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{ 'security.please.sign.in' | trans }}</h1>

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <hr>
            <label for="inputPassword">{{ 'security.password' | trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <hr>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                {{ 'security.sign.in' | trans }}
            </button>
        </form>

        <br><hr><br>
        <button class="btn btn-social btn-dark"><a href="{{ path('connect_google_start') }}">{{ 'security.login.with.google' | trans }}</a></button><br>
        <button class="btn btn-social btn-dark"><a href="{{ path('connect_facebook_start') }}">{{ 'security.login.with.facebook' | trans }}</a></button><br>
    </div>
{% endblock %}
