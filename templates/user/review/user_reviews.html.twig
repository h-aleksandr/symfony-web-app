{% extends 'base.html.twig' %}

{% block title %}{{ 'user.review.user_reviews.title' | trans}}{% endblock %}

{% block body %}
    <a href="{{ path('review_create') }}" class="btn btn-block btn-primary">{{ 'user.review.user_reviews.create.new.review' | trans}}</a>
    <div class="form-control-plaintext text-center">
        <h1><b>{{ 'user.review.user_reviews.header' | trans}}</b></h1>
    </div>

    <div class="margin-8"></div>

    {% for review in reviews %}
        <hr>
        <h3>{{ review.title | upper}}</h3>
        <hr>
        <a href="{{ path('show_user_review', {id: review.id}) }}" class="btn btn-warning pull-right">{{ 'user.review.user_reviews.more' | trans}}</a>
        <span><h5><b>{{ 'user.review.user_reviews.author.assessment' | trans}}: {{ review.assessment }}</b> || <b>{{ 'user.review.user_reviews.rating' | trans}}: ?</b> || <b>{{ 'user.review.user_reviews.likes' | trans}}:</b></h5></span>
        <span><b>{{ 'user.review.user_reviews.tags' | trans}}: </b></span>
        <hr>
        <hr>
        <br>
        <br>

        <div class="margin-8"></div>
    {% else %}
        <tr>
            <td colspan="6">{{ 'user.review.user_reviews.you.have.not.records.yet' | trans}}</td>
        </tr>
    {% endfor %}

{% endblock %}
